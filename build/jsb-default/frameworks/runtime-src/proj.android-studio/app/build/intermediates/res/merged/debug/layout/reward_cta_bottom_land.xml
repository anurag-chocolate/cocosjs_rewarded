<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/v_screen_land_content_height"
    android:layout_gravity="bottom"
    android:background="@color/v_trans_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/v_screen_land_content_padding"
    android:paddingRight="@dimen/v_screen_land_content_padding">

    <com.duapps.ad.video.views.RoundImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/v_screen_land_icon_size"
        android:layout_height="@dimen/v_screen_land_icon_size"
        android:layout_marginRight="@dimen/v_screen_land_icon_margin"
        android:background="@drawable/ad_icon_bg"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/v_screen_land_icon_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/v_text_color_white"
            android:textSize="@dimen/v_text_size_title"/>

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:textColor="@color/v_text_color_white"
            android:textSize="@dimen/v_text_size_desc"/>

    </LinearLayout>

    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/v_action_height_normal"
        android:background="@drawable/v_ad_callaction_rect_bg"
        android:gravity="center"
        android:maxWidth="@dimen/v_screen_land_btn_max_width"
        android:paddingLeft="@dimen/v_screen_land_btn_padding"
        android:paddingRight="@dimen/v_screen_land_btn_padding"
        android:textColor="@color/v_text_color_white"
        android:textSize="@dimen/v_text_size_btn"/>

</LinearLayout>